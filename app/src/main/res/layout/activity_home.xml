<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="#26C8B1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logoQR"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/qrcode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"/>

        <TextView
            android:id="@+id/TVheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoQR"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/biorhyme"
            android:text="Welcome to QRcode Scanner \n and Gennerator"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="4dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btgenerate"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button"
            android:textSize="18sp"
            android:text="generate QR Code"
            android:layout_below="@+id/TVheading"
            android:layout_marginTop="30dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btscanQR"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button"
            android:textSize="18sp"
            android:text="Scan QR Code"
            android:layout_below="@+id/btgenerate"
            android:layout_marginTop="20dp"/>










    </RelativeLayout>

</LinearLayout>